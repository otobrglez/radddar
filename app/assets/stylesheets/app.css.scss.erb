@import url(http://fonts.googleapis.com/css?family=Anton);
@font-face { font-family: steelfish; src: url('<%= asset_path "steelfish.ttf" %>'); }

body,html,td,th,p,input,textarea{
	font-family:sans-serif;
	font-size:12px;
}

a{
	color:white;
	text-decoration:none;
}

p{
	margin:0px;
	padding:0px;
}

html,body{
	margin:0px;
	padding:0px;
	color:white;

	width:100%;
	height:100%;
	oveflow:hidden;
}

body{
	background-image:url('<%=asset_path "bg.jpg" %>');
	position:relative;
}

#app{
	position:absolute;
	border:none;
	display:block;
	width:100%;
	height:100%;
}

#app{
	background-image:url('<%=asset_path "bg.jpg" %>');

	position:absolute;
	top:0px;
	z-index:10;

	.slogan{
		background-image:url('<%= asset_path "tabs_bg.png" %>');
		background-repeat: repeat-x;
		text-align:center;
		height:28px;
	}

	.tabs-nav{
		display:block;
		width:100%;
		height:58px;
		overflow:hidden;
		font-family: 'Anton', sans-serif;

		/*
		background-image:url('<%= asset_path "radddar_slogan.png" %>');
		background-position: top center;
		background-repeat:no-repeat;
		padding-top:15px;
		*/

		ul,li{
			list-style:none;
			margin:0px;
			padding:0px;
		}

		ul{
			display:block;
			width:100%;
		}		

		li{
			float:left;
			display:inline-block;
			width:20%;
			text-align:center;
		
			a{
				font-family: 'Anton', sans-serif;
				display:block;
				background-position: center 0px;
				background-repeat:no-repeat;
				text-align:center;
				padding:0px;
				padding-top:30px;
				font-weight:normal;
				margin-top:5px;
				margin-bottom:0px;
				border-right:1px dotted #666;
				font-size:12px;
			}
		}

		li:last-child a{
			border:none;
		}

		li a:hover,
		li a.active{
			color:#65D7DE;
		}

		li.back a{
			background-image:url('<%= asset_path "back_w.png" %>');
		}

		li.back a:hover,
		li.back a.active{
			background-image:url('<%= asset_path "back_b.png" %>');
		}

		li.chat a{
			background-image:url('<%= asset_path "chat_w.png" %>');
		}

		li.chat a:hover,
		li.chat a.active{
			background-image:url('<%= asset_path "chat_b.png" %>');
		}

		li.radddar a{
			background-image:url('<%= asset_path "radddar_w.png" %>');
		}

		li.radddar a:hover,
		li.radddar a.active{
			background-image:url('<%= asset_path "radddar_b.png" %>');
		}

		li.profile a{
			background-image:url('<%= asset_path "profile_w.png" %>');
		}

		li.profile a:hover,
		li.profile a.active{
			background-image:url('<%= asset_path "profile_b.png" %>');
		}

		li.about a{
			background-image:url('<%= asset_path "settings_w.png" %>');
		}

		li.about a:hover,
		li.about a.active{
			background-image:url('<%= asset_path "settings_b.png" %>');
		}
	}

	.tabs{
		margin-left:10px;
		margin-right:10px;
		border-top:1px dotted white;

		.top_info,
		.distance_between,
		.stat{
			border-bottom:1px dotted white;
			font-family: steelfish, sans-serif;
			font-size:25px;
			text-align:center;
			text-transform:uppercase;
			padding-top:2px;
			padding-bottom:1px;
			span.b{ color: #65D7DE; }

			span.none,
			span.ufo 	{	color: #666666;	}
			span.male 	{ 	color: #65D7DE;	}
			span.female { 	color: #DE6C65;	}


			.stat-wrap{
				

				span.ufo,
				span.male,
				span.female{
					color:#65D7DE;
				}

				span.ufo 	{	color: #666666;	}
				span.male 	{ 	color: #65D7DE;	}
				span.female { 	color: #DE6C65;	}
					
			}
		}

		.tab, .screen{
			display:none;
		}

		.tab.active, .screen.active{
			display:block;
		}
	
		/* Screens */
		.profile{

			.profile_header{
				margin-top:7px;

				.live_status_field{
					.status_field,
					.set_status_form{
						textarea{
							width:99%;
							border:none;
							padding:3px;
						}
						margin-bottom:6px;
						background-image:url("<%= asset_path 'status_down_b.png' %>");
						background-position:30px bottom;
						background-repeat:no-repeat;
					}

					.status_field{
						padding-left:0px;
						padding-right:0px;
						margin-top:0px;
						padding-top:0px;

						/* background-color:blue; */
						
						p{
							padding:10px;	
						}
					}
				}

				.status_tools{
					position:relative;
					height:60px;

					.profile_image_wrap{
						position:absolute;
						left:40px;
						top:0px;
					}

					.tools{
						padding-left:105px;
					}
				}

				.profile_image_wrap{
					img{
						width:48px;
						height:48px;
						margin-left:2px;
						margin-top:3px;
					}
					
					background-image:url("<%= asset_path 'box_b.png' %>");
					background-repeat:no-repeat;
					background-position:top center;

					width:52px;
					height:53px;
				}

				.status_field{
					padding:5px;
					margin-bottom:6px;
				}

				.status_tools .loc,
				.status_tools .loc a,
				.status_tools .status,
				.status_tools .status a{
					font-family: steelfish;
					font-size:25px;
					text-transform:uppercase;
				}

				.status_tools{
					.buttonz{
						display:none;
						a{ color: #65D7DE; }
						float:right;
					}
				}

				.update_status_link{ margin-right:20px; }
			}

			/* #### male #### */
			.male .profile_image_wrap{
				background-image:url("<%= asset_path 'box_c.png' %>"); }

			.male .status_field p,
			.male textarea{
				background-color:#65D7DE; color:black;
			}

			/* #### female #### */
			.female .profile_image_wrap{
				background-image:url("<%= asset_path 'box_r.png' %>"); }
			
			.female .status_field p,
			.female textarea{
				background-color:#DE6C65; color:black;
			}

			.female .live_status_field .status_field,
			.female .live_status_field .set_status_form{
				background-image:url("<%= asset_path 'status_down_r.png' %>");
			}

			/* #### none #### */
			.none .profile_image_wrap{
				background-image:url("<%= asset_path 'box_b.png' %>"); }			

			.none .status_field p,
			.none textarea{
				background-color:black; color:white;
			}

			.none .live_status_field .status_field,
			.none .live_status_field .set_status_form{
				background-image:url("<%= asset_path 'status_down_bl.png' %>");
			}

			ul,li{ list-style:none; padding:0px; margin:0px; }

			li{
				border-top:1px dotted white;
				font-family: steelfish;
				font-size:25px;
				text-transform:uppercase;
				position:relative;
				background-position:left center;
				background-repeat:no-repeat;
				padding-left:40px;
				line-height:40px;
				height:40px;

				span.label{
					width:100px;
					display:inline-block;
				}

				span.value{ color:#65D7DE }
			}

			li.name{ background-image:url("<%= asset_path 'name_w.png' %>"); }
			li.age{ background-image:url("<%= asset_path 'age_w.png' %>"); }
			li.gender{ background-image:url("<%= asset_path 'gender_w.png' %>"); }
			li.swap_range{ background-image:url("<%= asset_path 'swap_w.png' %>"); }
			li.logout{ background-image:url("<%= asset_path 'logout_w.png' %>"); }	
		
			.selector{
				display:inline-block;
				position:absolute;
				right:0px;
				
				.left,
				.right,
				.current{
					float:left;
				}
				
				.left, .right{
					display:block;
					width:30px;

					a{
						display:inline-block;
						width:30px;
						overflow:hidden;
						text-indent:-100px;
						background-image:url("<%= asset_path 'left_w.png' %>");
						background-repeat:no-repeat;
						background-position:center center;
					}

					a.none{
						background-image:none;
					}
				}

				.right a{
					background-image:url("<%= asset_path 'right_w.png' %>");
				}

				.current_value,
				.values{ display:none; }
			}
		}
	}

	.list{
		margin:5px;

		ul,li{
			list-style:none;
			padding:0px;
			margin:0px;
		}

		li{
			position:relative;
			/* border-top:1px dotted white; */
			line-height:50px;
			height:50px;
		}

		li:first-child { border:none; }
	}

	.chat_feed,
	.live_list{
		margin-left:0px;
		margin-right:0px;
		margin-top:7px;
	}

	.chat_feed li.user,
	.live_list li.user {

		.user_line_wrap{

			margin-left:10px;
			margin-right:10px;

			border-bottom:1px dotted white;
			height:45px;
			position:relative;
			padding-left:40px;

			.name{}
			.name, .distance{
				font-family: steelfish;
				font-size:25px;
				text-transform:uppercase;

				float:left;
				display:inline-block;
			}

			.remove{
				display:inline-block;
				width:25px;
				overflow:hidden;
				position:absolute;
				top:0px;
				right:0px;

				a{
					display:inline-block;
					width:25px;
					background-image:url("<%= asset_path('feed_remove_w.png') %>");
					background-repeat:no-repeat;
					background-position:right center;
					overflow:hidden;
					text-indent:-300px;
				}
			}

			.distance{ float:right; }

			.image{
				position:absolute;
				left:0px;
				top:9px;

				background-color:black;
				display:inline-block;
				width:29px;
				height:29px;
				overflow:hidden;
				border-radius:2px;

				img{
					margin:3px;
					width:23px;
					height:23px;
				}
			}

		}
	}

	.chat_feed,
	.live_list{


		li.user.chat .tools,
		li.user.note .tools{
			display:inline-block;
			position:absolute;
			right:30px;
			top:0px;
			background-image:url("<%= asset_path('note_w.png') %>");
			background-position:center center;
			background-repeat:no-repeat;
			width:25px;
			overflow:hidden;
			text-indent:-300px;

		}

		li.user.chat .tools{
			background-image:url("<%= asset_path('chat_w_1.png') %>");
		}

		li.user.on{
			background-color:white;
			color:black;
			a{ color:black; }
		
			.remove a{
				background-image:url("<%= asset_path('feed_remove.png') %>");
			}

			.tools{
				background-image:url("<%= asset_path('note_b.png') %>");
			}

			.user_line_wrap{
				border-bottom:1px dotted black;
			}

		}

		li.user.chat.on .tools{
			background-image:url("<%= asset_path('chat_b_1.png') %>");
		}
	}

	li.user.off{
		background-color:none;
	}

	li.user.male .user_line_wrap .image{
		background-color:#65D7DE;
	}

	li.user.female .user_line_wrap .image{
		background-color:#DE6C65;
	}

	li.user{
		border-bottom:none;
	}
}

.tabs .member_profile{

	.distance_between{ margin-bottom:10px; }
	.distance_between span.who{ color:black; }
	.distance_between.male span.who{ color:#65D7DE; }
	.distance_between.female span.who{ color:#DE6C65; }

	.user_status {
		color:white;
		padding:0px;
		padding-bottom:6px;
		margin-bottom:5px;
		display:block;

		background-image:url("<%= asset_path('status_down_bl.png') %>");
		background-position:6px bottom;
		background-repeat:no-repeat;

		.user_status_wrap{
			background-color:black;
			padding:10px;
		}
	}

	.user_status.male .user_status_wrap,
	.user_status.female .user_status_wrap{
		color:black;
	}

	.user_status.male{
		background-image:url("<%= asset_path('status_down_b.png') %>");
	}

	.user_status.female{
		background-image:url("<%= asset_path('status_down_r.png') %>");
	}


	.user_status.male .user_status_wrap{ background-color:#65D7DE }
	.user_status.female .user_status_wrap{ background-color:#DE6C65 }

	.member_profile_wrap{
		display:block;
		width:100%;
		position:relative;

		.profile_tools{
			position:absolute;
			width:64px;
			display:block;
			top:10px;
			left:10px;
			height:128px;
			z-index:10;
		}

		.big_image{
			position:relative;
			width:100%;
			img{
				width:100%;
			}
		}
	}
	
}

.tabs-nav{
	
	.chat{
		position:relative;
		.alerts_wrap{
			display:none;
			position:absolute;
			left:0px;
			width:100%;
			text-align:center;
			color:white;
			top:20px;
			
			span.alerts{
				display:inline-block;
				background-color:red;
				border-radius:50%;

				width:14px;
				height:14px;
				line-height:15px;
				font-weight:normal;

				font-size:10px;
			}

		}
	}
}

#app .tabs{
	position:absolute;
	bottom:0px;
	top:90px;
	left:10px;
	right:10px;
	margin:0px;
}

.tabs .chats{
	ul,li{
		list-style:none;
		margin:0px;
		padding:0px;
	}

	ul.live-chat-list{
		li.live-chat{
			display:none;
		}

		li.live-chat.act{
			display:block;
		}

		li.live-chat{
			.messages-wrap{
				.chats-wrap{
					display:block;
					.messages{
						li.message{
							font-size:14px;
							line-height:16px;
							color:white;
							
							padding:5px;
							padding-left:10px;
							padding-right:10px;
						
							.created_at{
								color:#9A9B9D;
							}

							overflow:hidden;
						}

						li.their{
							background-color:white;
							color:black;
						}
					}

				}
			}
		}

		.live-chat.offline{
			.message-form{
				display:none;
			}
		}
	}	
}

.tabs .chats{ position:relative; height:100%;
	.chats-wrap{
		overflow:hidden;
		position:relative;
		height:100%;
		.live-chat-list{ position:relative; height:100%;
			li.live-chat{ position:relative; height:100%;
				.messages-wrap{ position:relative; height:100%;
					.chats-wrap{
						/* background-color:blue; */
						position:relative;
						/* height:100%; */
						.messages{
							position:absolute;
							bottom:0px;
							margin-bottom:110px;
							width:100%;
						}
					}
				}

				.message-form{
					position:absolute;
					bottom:0px;
					margin-bottom:20px;
					border-top:1px dotted white;
					border-bottom:1px dotted white;
					width:100%;

					.message-form-wrap{
						position:relative;
						padding-left:50px;

						.error{
							color:red;
							margin-top:3px;
							display:block;
						}	

						.send{
							display:inline-block;
							background-color:transparent;
							background-image:url("<%= asset_path 'chat_w_1.png' %>");
							background-repeat:no-repeat;
							background-position:center center;
							position:absolute;
							left:0px;
							top:0px;
							height:50px;
							border:none;
							text-indent:-200px;
							overflow:hidden;
							width:50px;
						}

						.message_body{
							margin:0px;
							padding:0px;
							padding:2px;
							background-color:white;
							border:none;
							border-radius:5px;
							margin-top:4px;
							margin-bottom:3px;
							width:98%;

							font-size:14px;
							line-height:16px;
						}
					}
				}
			}
		}
	}
}



#map{
	display:block;
	position:absolute;
	width:100%;
	top:125px;
	bottom:0px;
	z-index:20;
	background-color:white;
}

#global_error{
	
	z-index:30;
	position:absolute;
	top:0px;
	left:0px;
	right:0px;
	bottom:0px;
	width:100%;
	height:100%;
	display:block;

	display:none;

	background-image:url("<%= asset_path('video_bg.png') %>");
	
	.msg-wrap{
		background-image:url("<%= asset_path('radddar_big_w.png') %>");
		background-position:top center;
		background-repeat:no-repeat;
		padding-top:140px;

		margin:10px;
		margin-top:40%;
		display:block;

		.msg{
			border-top:1px dotted white;
			padding:10px;

			
			font-size:15px;
			text-align:center;
		}
	}
}


p.no_chats{
	font-family: steelfish, sans-serif;
	font-size:25px;
	text-align:center;
	text-transform:uppercase;
	margin-top:150px;
}

