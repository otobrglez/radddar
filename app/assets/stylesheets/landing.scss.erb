@font-face {
    font-family: 'WisdomScriptAIRegular';
    src: url('<%= asset_path("wisdom_script-webfont.eot") %>');
    src: url('<%= asset_path("wisdom_script-webfont.eot") %>?#iefix') format('embedded-opentype'),
         url('<%= asset_path("wisdom_script-webfont.woff") %>') format('woff'),
         url('<%= asset_path("wisdom_script-webfont.ttf") %>') format('truetype'),
         url('<%= asset_path("wisdom_script-webfont.svg") %>#WisdomScriptAIRegular') format('svg');
    font-weight: normal;
    font-style: normal;
};

html{
	/* http://maxvoltar.com/archive/-webkit-font-smoothing */

	-webkit-text-size-adjust: none;
	font-smooth:never;
	-webkit-font-smoothing: subpixel-antialiased; /* antialiased; */
}

html,body{
	margin:0;
	padding:0;
	width:100%;
	height:100%;
}

.video{
	display: none;
	position: absolute;
	top:0px;
	left:0px;
	bottom:0px;
	right:0px;
	width:100%;
	height:100%;
	text-align:left;
	margin:0px;
	padding: 0px;
	z-index:2;

	background-image:url("<%= asset_path('video_bg.png') %>");

	.video-wrap{
		max-width:853px;
		margin: 0px auto;
		padding-top:15%;

		text-align:right;

		a{
			text-align:right;
			font-family: Anton;
			padding-right:10px;
			font-smooth:never;
		}
	}
}

body,td,th,p{
	color:white;
	font-family:helvetica;
	font-size:14px;
}

a{
	color:white;
	text-decoration:none;
}

body{
	background-image:url("<%= asset_path('bg.jpg') %>");
	text-align:center;
	position: relative;
}

div.wrap{
	text-align:left;
	max-width:750px;
	margin:0 auto;
	padding-top:5%;
	z-index:1;
}

.inner_wrap{
	width:100%;
	height:680px;
	position: relative;

	.logo{
		width:155px;
		margin:0 auto;
	}

	.logo a{
		background-image:url("<%= asset_path('radddar_s_w.png') %>");
		background-repeat:no-repeat;
		background-position:top left;
		display: inline-block;
		width:155px;
		height:50px;
		text-indent:-600px;
		overflow: hidden;
	}

	background-image:url("<%= asset_path('radddar_phone_big.png') %>");
	background-position:center 70px;

	.play_video{
		display: inline-block;
		height:50px;
		position: absolute;
		left:64%;
		top:90px;

		a{
			background-image: url("<%= asset_path('play_video.png') %>");
			background-position:left center;
			background-repeat:no-repeat;
			display:block;
			height:48px;
			line-height:40px;
			text-indent:52px;
			font-family: 'Anton', sans-serif;
			font-smooth:never;
			font-size:12px;
		}

	}

	.content{
		display: block;
		width:100%;
		margin-top:140px;
		
		div.left, div.center, div.right{
			display:inline-block;
			float:left;
			width:33%;
			/* margin-top:20px; */
		}

		div.right{
			margin-top:20px;
		}

		.left{
			.left-wrap{
				width:215px;
			}

			text-align:right;

			h1,p{
				padding:0px;
				margin:0px;
			}


			h1{
				font-family: 'WisdomScriptAIRegular', sans-serif;
				font-size:15px;
				margin-bottom:10px;
				margin-top:10px;
			}

			p{
				font-family: 'Anton', sans-serif;
				font-size:14px;
				border-top:1px dotted #666;
				border-bottom:1px dotted #666;
				padding-top:10px;
				padding-bottom:10px;
				font-smooth:never;
			}

			p.error,
			p.info{
				border:none;
			}

			p.error{
				color:red;
			}

		}

		.right{
			float:right;
			.right-wrap{
				width:215px;
				float:right;
			}

			ul,li{
				list-style:none;
				margin:0px;
				padding:0px;
			}

			li{
				font-family: 'Anton', sans-serif;
				font-smooth:never;

				font-size:14px;
				border-bottom:1px dotted #666;

				background-image:url("<%= asset_path('tick.png') %>");
				background-repeat:no-repeat;
				background-position:left center;

				text-indent:30px;
				height:40px;
				line-height:40px;
			}

			li:last-child{
				border:none;

			}
		}

		.center{

			ul,li{
				list-style:none;
				padding:0px;
				margin:0px;
			}

			.center-wrap{
				display:block;
				width:212px;
				height:318px;
				overflow: hidden;
				margin-left:25px;
			
				ul{
					display:block;
					height:318px;
					overflow: hidden;

					li{
						display: inline-block;
						float:left;
						margin:0px;
						padding:0px;
					}
				}
			}
		}
	}

}

	.footer{
		font-family: 'Anton', sans-serif;
		a{
			font-family: 'Anton', sans-serif;
		}
	
		font-size:12px;
		text-align:center;
		height:60px;
		width:100%;

		iframe{
			margin:0px;
			padding:0px;
		}

		.footer-wrap{
			border-top:1px dotted #666;
			max-width:600px;
			margin:0 auto;
			text-align:center;
			padding-top:5px;
		}
	}

.reminder{

	input{
		color:#333;
		background-color:black;
		height:30px;
		line-height:30px;
		border:none;
		width:195px;
		font-family: Anton, sans-serif;
		font-size:14px;
		text-align:right;
		padding-left:10px;
		padding-right:10px;
		border-radius:7px;
	}

}

.alpha_form{
	ul,li{
		list-style:none;
		margin:0px;
		padding:0px;
	}

	li{
		border-radius:7px;
		background-color:white;
		height:30px;
		line-height:30px;
		margin-bottom:5px;
		a{
			color:black;
			display:block;
			text-indent:10px;
			text-align:left;
			font-family: Anton, sans-serif;
			font-weight:normal;
			background-position:center right;
			background-repeat:no-repeat;
			margin-right:10px;
		}
	}

	li.twitter a{
		background-image:url("<%= asset_path('twitter_24.png') %>");
	}

	li.facebook a{
		background-image:url("<%= asset_path('facebook_24.png') %>");
	}
}

.left-wrap span.alpha{
	color:red;
}

@media only screen and (max-width:750px){
	
	.inner_wrap{
		background:none;
		height:auto;
	}

	.inner_wrap .play_video,
	#screens,
	.content .center{ display: none; }

	.footer .footer-wrap{
		border:none;
	}

	.inner_wrap .content{
		margin-top:10px;

		div.left{
			float:none;
			width:100%;
			display: block;
		}

		div.right{
			float:none;
			width:100%;
			display: block;

			.right-wrap{
				float: none;
			}
		}

		div.left .left-wrap,
		div.right .right-wrap{
			width:80%;
			margin:0 auto;
			text-align:left;


			input{
				text-align:center;
				width:96%;
				/* margin-bottom:10px; */
			}
		}

	}

}
